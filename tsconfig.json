{
  "compilerOptions": {
    "outDir": "./build",
    "module": "CommonJS",
    "moduleResolution": "node",
    "target": "es2015",
    "lib": ["es6", "DOM"],
    "types": ["node"],
    "typeRoots": ["node_modules/@types", "./typings"],
    "resolveJsonModule": true,
    "noImplicitAny": true,
    "strict": true
  },
  "exclude": ["./node_modules", "./build"],
  "include": ["./src"]
}
